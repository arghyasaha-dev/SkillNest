<%- layout("layouts/boilerplate.ejs") %>

    <section class="form edit-bid">
        <header class="page-header">
            <h1>Edit Bid</h1>
            <p>Update your offer for this task</p>
        </header>

        <form action="/tasks/<%= taskid %>/bids/<%= bid._id %>?_method=PUT" method="POST" class="form-card">
            <div class="field">
                <label for="amount">Bid Amount (â‚¹)</label>
                <input type="number" name="amount" id="amount" placeholder="amount" value="<%= bid.amount %>" />
            </div>

            <div class="field">
                <label for="message">Message (optional)</label>
                <textarea name="message" id="message" placeholder="message" rows="4"><%= bid.message %></textarea>
            </div>

            <div class="form-actions">
                <button class="btn primary">Update Bid</button>
                <a href="/tasks/<%= taskid %>" class="btn ghost">Cancel</a>
            </div>
        </form>
    </section>