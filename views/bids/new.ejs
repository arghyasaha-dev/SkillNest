<%- layout("layouts/boilerplate") %>

    <section class="form new-bid">
        <header class="page-header">
            <h1>Place a Bid</h1>
            <p>Submit your offer for this task</p>
        </header>

        <form action="/tasks/<%= task._id %>/bids" method="POST" class="form-card">
            <div class="field">
                <label for="amount">Bid Amount (â‚¹)</label>
                <input name="amount" id="amount" type="number" placeholder="Enter your offer" required />
            </div>

            <div class="field">
                <label for="message">Message (optional)</label>
                <textarea id="message" name="message" rows="4"
                    placeholder="Add a short note about availability or experience"></textarea>
            </div>

            <div class="form-actions">
                <button class="btn primary">Submit Bid</button>
                <a href="/tasks/<%= task._id %>" class="btn ghost">Cancel</a>
            </div>
        </form>
    </section>