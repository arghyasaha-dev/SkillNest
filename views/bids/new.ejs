<%- layout("layouts/boilerplate.ejs") %>

    <section class="form new-bid">
        <header class="page-header">
            <h1>Place Your Bid</h1>
            <p>Submit your offer for this task and tell the client why you're the right fit</p>
        </header>

        <form action="/tasks/<%= task._id %>/bids" method="POST" class="form-card">
            <div class="field">
                <label for="amount">Bid Amount (â‚¹) *</label>
                <input name="amount" id="amount" type="number" placeholder="Enter your offer" min="1"
                    max="<%= task.budget %>" step="any" required />
                <span class="form-hint">Your quoted price for completing this task</span>
            </div>

            <div class="field">
                <label for="message">Proposal Message</label>
                <textarea id="message" name="message" rows="5"
                    placeholder="Tell the client about your experience, availability, or why you're a great fit for this task"></textarea>
                <span class="form-hint">A good message increases your chances of being selected</span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn primary btn-lg">Submit Bid</button>
                <a href="/tasks/<%= task._id %>" class="btn ghost">Cancel</a>
            </div>
        </form>
    </section>