<%- layout("layouts/boilerplate") %>

    <section class="form edit-review">
        <header class="page-header">
            <h1>Edit Review</h1>
            <p>Update your feedback</p>
        </header>

        <form action="/tasks/<%= task._id %>/reviews/<%= review._id %>?_method=PUT" method="POST" class="form-card">
            <label for="rating">Rating (1â€“5)</label>
            <input name="rating" id="rating" placeholder="rating" type="number" min="1" max="5"
                value="<%= review.rating %>" />

            <label for="comment">Feedback</label>
            <textarea name="comment" id="comment" placeholder="comment"><%= review.comment %></textarea>

            <button class="btn primary">Submit</button>
        </form>
    </section>