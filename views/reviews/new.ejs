<%- layout("layouts/boilerplate.ejs") %>

<section class="form">
    <header class="page-header">
        <h1>Leave a Review</h1>
        <p>Share your experience with this service provider</p>
    </header>

    <form action="/tasks/<%= task._id %>/reviews" method="POST" class="form-card">
        <div class="field">
            <label for="rating">Rating (1â€“5) *</label>
            <input 
                name="rating" 
                id="rating" 
                type="number"
                placeholder="1-5 stars"
                min="1"
                max="5"
                required 
            />
            <span class="form-hint">1 = Poor, 5 = Excellent</span>
        </div>

        <div class="field">
            <label for="comment">Your Feedback *</label>
            <textarea 
                name="comment" 
                id="comment" 
                placeholder="Share details about quality of work, communication, timeliness, etc."
                rows="5"
                required
            ></textarea>
            <span class="form-hint">Detailed reviews help other users make informed decisions</span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn primary btn-lg">Submit Review</button>
            <a href="/tasks/<%= task._id %>" class="btn ghost">Cancel</a>
        </div>
    </form>
</section>