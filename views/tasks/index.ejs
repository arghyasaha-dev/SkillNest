<%- layout("layouts/boilerplate.ejs") %>
    <header class="page-header">
        <h1>Nearby Tasks</h1>
        <p>Services requested around you</p>
    </header>

    <section class="task-grid">
        <% for (let i=0; i < tasks.length; i++) { %>
            <article class="task-card">
                <h3>
                    <%= tasks[i].title %>
                </h3>
                <p>
                    <%= tasks[i].description %>
                </p>
                <span class="meta">
                    <%= tasks[i].budget %> Â· 2 km
                </span>
                <a href="/tasks/<%= tasks[i]._id %>" class="link">View</a>
            </article>
            <% } %>
    </section>