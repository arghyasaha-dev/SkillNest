<%- layout("layouts/boilerplate.ejs") %>
    <section class="task-detail">
        <div class="task-main">
            <h1>
                <%= task.title %>
            </h1>
            <p>
                <%= task.description %>
            </p>
        </div>

        <aside class="task-side">
            <div class="card">
                <span>Budget</span>
                <strong>
                    <%= task.budget %>
                </strong>
            </div>

            <a href="/tasks/<%= task._id %>/bids/new">Place Bid</a>
        </aside>

        <section class="page-header">
            <h1>Bids</h1>
        </section>

        <% for(let i=0;i<bids.length;i++){ %>
            <div class="bid-list">
                <div class="bid-row">
                    <span>₹<%= bids[i].amount %> · <%= bids[i].bidder %></span>
                    <span>Status: <%= bids[i].status %></span>
                    <div>
                        <%= bids[i].message %>
                    </div>

                    <form action="/tasks/<%= task._id %>/bids/<%= bids[i]._id %>/accept" method="POST">
                        <button class="btn primary">Accept</button>
                    </form>

                    <a href="/tasks/<%= task._id %>/bids/<%= bids[i]._id %>/edit">Edit</a>
                </div>
            </div>
            <form action="/tasks/<%= task._id %>/bids/<%= bids[i]._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
            </form>
            <% } %>

                <div>
                    <a href="/tasks/<%= task._id %>/reviews/new">Create a Review</a>
                </div>

                <div>
                    <a href="/tasks/<%= task._id %>/reviews">Reviews</a>
                </div>

    </section>