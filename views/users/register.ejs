<%- layout("layouts/boilerplate.ejs") %>

    <section class="auth">
        <div class="auth-card">
            <h1 style="text-align: center; margin-bottom: 24px;">Join SkillNest</h1>
            <p style="text-align: center; color: #6b7280; margin-bottom: 24px;">Connect with local professionals and
                opportunities</p>

            <form action="/register" method="POST">
                <div class="field">
                    <label for="name">Username</label>
                    <input name="username" id="username" type="text" placeholder="e.g. johndoe" required />
                </div>

                <div class="field">
                    <label for="email">Email Address</label>
                    <input name="email" id="email" type="email" placeholder="you@example.com" required />
                </div>

                <div class="field">
                    <label for="password">Password</label>
                    <input name="password" id="password" type="password" placeholder="••••••••" required />
                    <span class="form-hint">At least 8 characters recommended</span>
                </div>

                <button type="submit" class="btn primary btn-lg btn-block">Create Account</button>
            </form>

            <p style="text-align: center; margin-top: 24px; color: #6b7280;">
                Already have an account?
                <a href="/login" style="color: #2563eb; font-weight: 600;">Sign in</a>
            </p>
        </div>
    </section>